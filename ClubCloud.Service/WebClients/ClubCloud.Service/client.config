<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <client>
      <endpoint
        name="http"
        contract="$SharePoint.Type.23c6e4c4-d8d7-4bef-8d11-420c88bbefc2.FullName$"
        binding="customBinding"
        bindingConfiguration="CustomHttpBinding" />
    </client>
    <behaviors>
      <endpointBehaviors>
        <behavior name="CustomEndpointBehavior" >
          <dataContractSerializer maxItemsInObjectGraph="6000000"/>
        </behavior>
      </endpointBehaviors>
    </behaviors>    
    <bindings>
      <customBinding>
        <binding
          name="CustomHttpBinding" maxBufferPoolSize="1073741824" maxReceivedMessageSize="1073741824" sendTimeout="0:10:00">
          <security
            authenticationMode="IssuedTokenOverTransport"
            allowInsecureTransport="true" />
          <textMessageEncoding>
            <readerQuotas
              maxStringContentLength="1073741824"
              maxArrayLength="1073741824"
              maxBytesPerRead="1073741824" />
          </textMessageEncoding>
          <!--<binaryMessageEncoding>
            <readerQuotas
              maxStringContentLength="1048576"
              maxArrayLength="2097152" />
          </binaryMessageEncoding>-->
          <httpTransport
            maxBufferPoolSize="1073741824"
            maxReceivedMessageSize="1073741824"
            transferMode="Streamed"
            authenticationScheme="Anonymous"
            useDefaultWebProxy="false"/>
        </binding>
      </customBinding>
    </bindings>
  </system.serviceModel>
</configuration>
