<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration>
  <system.web>
    <compilation debug="true" targetFramework="4.5">
    </compilation>
    <httpRuntime targetFramework="4.5" allowDynamicModuleRegistration="true" />
    <webServices>
      <protocols>
        <remove name="HttpGet" />
        <remove name="HttpPost" />
        <remove name="HttpPostLocalhost" />
        <add name="HttpGet" />
        <add name="HttpPost" />
        <add name="HttpPostLocalhost" />
      </protocols>
    </webServices>
    <customErrors mode="Off" />
  </system.web>
  <system.webServer>
    <security>
      <requestFiltering>
        <verbs>
          <remove verb="POST" />
          <remove verb="GET" />
          <remove verb="HEAD" />
          <add verb="POST" allowed="true" />
          <add verb="GET" allowed="true" />
          <add verb="HEAD" allowed="true" />
        </verbs>
      </requestFiltering>
    </security>
  </system.webServer>
  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="ClubCloudBinding" />
      </basicHttpBinding>
      <wsDualHttpBinding>
        <binding name="ClubCloudBinding" />
      </wsDualHttpBinding>
      <wsHttpBinding>
        <binding name="ClubCloudBinding" />
      </wsHttpBinding>
      <mexHttpBinding>
        <binding name="ClubCloudBinding" />
      </mexHttpBinding>
      <webHttpBinding>
        <binding name="ClubCloudBinding" >
          <security mode="Transport" >
            <transport clientCredentialType="None" />
          </security>
        </binding>
      </webHttpBinding>
    </bindings>
    <behaviors>
      <endpointBehaviors>
        <behavior name="ClubCloudEndPoint">
          <enableWebScript />
          <dataContractSerializer ignoreExtensionDataObject="false" />
          <endpointDiscovery enabled="true" />
        </behavior>
      </endpointBehaviors>
      <serviceBehaviors>
        <behavior name="showFaults">
          <serviceDebug includeExceptionDetailInFaults="true" />
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
        </behavior>
        <behavior name="ClubCloudAfhangen">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
          <dataContractSerializer ignoreExtensionDataObject="false" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service behaviorConfiguration="ClubCloudAfhangen" name="ClubCloud.Service.ClubCloudAfhangenService">
        <endpoint address="script" behaviorConfiguration="ClubCloudEndPoint"
          binding="webHttpBinding" bindingConfiguration="ClubCloudBinding"
          name="ClubCloudScript" contract="ClubCloud.Service.IClubCloudAfhangenService" />
      </service>
    </services>
  </system.serviceModel>
